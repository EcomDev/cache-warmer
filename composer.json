{
    "name": "ecomdev/cache-warmer",
    "description": "Cache Purge/Pre-warmer Async Service",
    "type": "project",
    "license": "EULA",
    "authors": [
        {
            "name": "Ivan Chepurnyi",
            "email": "ivan.chepurnyi@ecomdev.org"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "~7.1",
        "react/http": "^0.8.3",
        "react/socket": "^1.0",
        "react/http-client": "^0.5.9",
        "ecomdev/reactive-socket": "^1.1",
        "ecomdev/reactive-socket-react": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "EcomDev\\CacheWarmer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EcomDev\\CacheWarmer\\": "tests",
            "": "features/bootstrap"
        },
        "files": [
            "tests/bootstrap.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "behat/behat": "^3.5",
        "guzzlehttp/guzzle": "^6.3",
        "squizlabs/php_codesniffer": "^3.3",
        "ecomdev/react-event-loop-test-utils": "^1.1",
        "brainmaestro/composer-git-hooks": "^2.4"
    },
    "scripts": {
        "phpcs": "phpcs --standard=PSR1,PSR2 src/ tests/",
        "phpcbf": "phpcbf --standard=PSR1,PSR2 src/ tests/",
        "test": "phpunit --colors --coverage-text",
        "pre-commit-hook": [
            "composer phpcbf",
            "composer phpcs",
            "composer test"
        ],
        "post-install-cmd": "cghooks add --ignore-lock",
        "post-update-cmd": "cghooks update"
    },
    "extra": {
        "hooks": {
            "pre-commit": "composer pre-commit-hook"
        }
    }
}
